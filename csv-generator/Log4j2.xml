<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p %c{2} - %m%n" />
		</Console>
		<File name="file" fileName="logs/log.log">
			<PatternLayout pattern="%d %-5p %c{2} - %m%n" />
		</File>
	</Appenders>

	<Loggers>
		<Root level="DEBUG">
			<Appender-ref ref="console" />
			<Appender-ref ref="file" />
		</Root>
	</Loggers>
</Configuration>